{
  "name": "zekt-action",
  "version": "1.0.0",
  "description": "Send custom event payloads from GitHub workflows to Zekt orchestration platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zekt-dev-org/zekt-action.git"
  },
  "keywords": [
    "github-actions",
    "orchestration",
    "events",
    "webhooks",
    "ci-cd",
    "zekt"
  ],
  "author": "zekt-dev-org",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zekt-dev-org/zekt-action/issues"
  },
  "homepage": "https://github.com/zekt-dev-org/zekt-action#readme",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
